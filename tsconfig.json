{
	"compilerOptions": {
	  "target": "ES2019",
	  "module": "CommonJS",
	  "moduleResolution": "Node",
	  "strict": true,
	  "sourceMap": true,
	  "esModuleInterop": true,
	  "lib": ["ESNext", "DOM"],
	  "declaration": true,
	  "noImplicitOverride": true,
	  "noUncheckedIndexedAccess": true,
	  "outDir": "dist",
	  "rootDir": "src",
	  "typeRoots": ["./node_modules/@types", "./types"]
	},
	"include": ["src/**/*.ts", "types"],
	"exclude": ["node_modules"]
  }
  